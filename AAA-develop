# For developers...

# Require that STARLAB_PATH be defined.

if (!$?STARLAB_PATH) then
    setenv STARLAB_PATH $CWD
endif

set install-dir = $STARLAB_PATH/usr

# Install autotools (place in install-dir):

(cd src/packages; ./install-autotools $install-dir)

# Make sure that install-dir precedes system directories in search path.

set path = ($install-dir $path)
rehash

# First time through we need to do autoreconf.

if (! -e configure) then
    autoreconf
endif

# Perform the usual configuration process:

./configure --prefix=$install-dir
make make install

# Then test whatever...
