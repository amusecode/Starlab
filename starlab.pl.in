#! /usr/bin/perl
#
#  this is a section of perl code to setup perl (e.g. cgi-bin) scripts
#  to know the absolute location of STARLAB and define all needed variables
# 
#  CAVEAT:  if you relocate the STARLAB directory tree, you will need to 
#	    edit this file (or re-install in the new location)
#
#

$slp1 ="@STARLAB@";
$ENV{'STARLAB'}="$slp1";
$sl_path = "${slp1}/sbin/;${slp1}/bin/";

$ENV{'PATH'} = "/usr/bin:/bin:${sl_path}";   #Needed?

