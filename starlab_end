#   sourcing this script will remove all STARLAB filth from your shell environment
#   (sorry, csh-family users only)

#				remove the usual bin/sbin from the path

if ($?STARLAB_PATH) then
    set np=()
    foreach p ($path)
        if ($p == $STARLAB_PATH/bin || $p == $STARLAB_PATH/sbin) then
            echo Removing $p from path
        else 
            set np=($np $p)
        endif
    end
    set path=($np)
    rehash
endif

#   				remove any STARLAB_ variables 

set _se=(`printenv | grep ^STARLAB_ | awk -F= '{print $1}'`)
if ($#_se > 0) then
  echo Removing all $#_se STARLAB_\* environment variables
  unsetenv $_se
endif

